<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">



            <ImageView
                android:layout_alignParentTop="true"
                android:id="@+id/iv_topratinggame_item"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/gta" />

    <TextView
        android:layout_below="@id/iv_topratinggame_item"
        android:id="@+id/tv_name_topratinggame_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:maxLines="1"
        android:layout_marginHorizontal="10dp"
        android:text="A Total War Saga: TROY"
        android:textColor="@color/white"
        android:textSize="15sp"

        />

            <TextView
                android:layout_below="@id/tv_name_topratinggame_item"
                android:id="@+id/tv_describle_topratinggame_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginHorizontal="10dp"
                android:text="In this legendary age, heroes walk the earth. In an act that shocks the world, audacious "
                android:textColor="@color/textsecondary"
                android:textSize="12sp"
                />

    <TextView
        android:id="@+id/tv_price_topratinggame_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_describle_topratinggame_item"
        android:layout_alignParentLeft="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:text="$200 USD"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:textSize="12dp"
        android:layout_marginVertical="5dp"
        android:id="@+id/tv_rating_topratinggame_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_describle_topratinggame_item"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="10dp"
        android:background="@color/textsecondary"
        android:text="97/100"
        android:textColor="@color/black" />

</RelativeLayout>