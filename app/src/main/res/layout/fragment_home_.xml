<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".BottomNav_Fragment.Home_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/edt_search_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:background="@drawable/custom_edt_search"
        android:textColor="@color/black"
        android:layout_marginHorizontal="40dp"
        android:layout_marginVertical="20dp"
        android:textColorHint="@color/textsecondary"
        android:hint="Search..."
        android:paddingLeft="20dp"
        android:paddingVertical="10dp" />

    <ViewFlipper
        android:id="@+id/vf_home"
        android:layout_width="match_parent"
        android:autoStart="true"
        android:inAnimation="@anim/slide_to_right"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/gta"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <ImageView
            android:src="@drawable/logo"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

    </ViewFlipper>

    <TextView
        android:textColor="@color/textcategory"
        android:text="Top rating game"
        android:layout_margin="13dp"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/rcv_topratinggame"
        android:layout_width="match_parent"
        android:layout_marginBottom="70dp"
        android:layout_height="match_parent"/>

</LinearLayout>